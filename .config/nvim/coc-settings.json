{
  "languageserver":
  {
    
    "v":
    { "command": "vls"
    , "filetypes": ["v", "vsh"]
    , "trace.server": "verbose"
    },
    
    "perl":
    { "command": "pls"
    , "filetypes": ["pl", "pod"]
    , "trace.server": "verbose"
    },
    
    "python":
    { "command": "pyright-python-langserver"
    , "filetypes": ["py", "pyc"]
    , "trace.server": "verbose"
    , "args": ["--node-ipc"]
    },

    "c":
    { "command": "clangd"
    , "filetypes": ["c", "h", "cpp", "hpp"]
    , "trace.server": "verbose"
    },

    "shell":
    { "command": "bash-language-server"
    , "filetype": ["sh","zsh","bash","fish"]
    , "trace.server": "verbose"
    },

    "deno":
    { "command": "deno"
    , "filetypes": ["js", "json", "ts", "tsx", "jsx"]
    , "trace.server": "verbose"
    , "args": ["lsp"]
    },

    "zig":
    { "command": "zls"
    , "filetype": "zig"
    , "rootPatterns": ["build.zig"]
    , "trace.server": "verbose"
    },
    
    "lua":
    { "command": "lua-language-server"
    , "filetype": "lua"
    , "trace.server": "verbose"
    },

    "yaml":
    { "command": "yaml-language-server"
    , "filetype": ["yml", "yaml"]
    , "trace.server": "verbose"
    , "args": ["--stdio"]
    }

  }

}
