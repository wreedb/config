export BEMENU_OPTS="--fn 'Myosevka 16' --ignorecase --prompt '' --ifne --scrollbar none --border 1 --bdr '#9DA9A0' --border-radius 2 --cw 1 --width-factor 1 --no-overlap --tf '#E67E80' --tb '#374247' --cf '#374247' --cb '#374247' --ff '#D699B6'--fb '#374247' --nf '#9DA9A0' --nb '#374247' --af '#9DA9A0' --ab '#374247' --hf '#A7C080' --hb '#404C51' --fbf '#7FBBB3' --fbb '#7FBBB3'"
[ -n "$(pgrep river)"    ] && export BEMENU_OPTS="--fn 'Myosevka 16' --ignorecase --list 10 --prompt '' --wrap --fixed-height --ifne --scrollbar none --border 1 --bdr '#9DA9A0' --border-radius 2 --cw 1 --width-factor 0.3 --center --tf '#E67E80' --tb '#374247' --cf '#374247' --cb '#374247' --ff '#D699B6' --fb '#374247' --nf '#9DA9A0' --nb '#374247' --af '#9DA9A0' --ab '#374247' --hf '#A7C080' --hb '#404C51' --fbf '#7FBBB3' --fbb '#7FBBB3' "
[ -n "$(pgrep qtile)"    ] && export BEMENU_OPTS="--fn 'Myosevka 16' --ignorecase --prompt '' --ifne --scrollbar none --border 1 --bdr '#9DA9A0' --border-radius 2 --cw 1 --width-factor 1 --no-overlap --tf '#E67E80' --tb '#374247' --cf '#374247' --cb '#374247' --ff '#D699B6'--fb '#374247' --nf '#9DA9A0' --nb '#374247' --af '#9DA9A0' --ab '#374247' --hf '#A7C080' --hb '#404C51' --fbf '#7FBBB3' --fbb '#7FBBB3'"
[ -n "$(pgrep Hyprland)" ] && export BEMENU_OPTS="--fn 'Myosevka 16' --ignorecase --list 10 --prompt '' --wrap --fixed-height --ifne --scrollbar none --border 1 --bdr '#9DA9A0' --border-radius 2 --cw 1 --width-factor 0.3 --center --tf '#E67E80' --tb '#374247' --cf '#374247' --cb '#374247' --ff '#D699B6' --fb '#374247' --nf '#9DA9A0' --nb '#374247' --af '#9DA9A0' --ab '#374247' --hf '#A7C080' --hb '#404C51' --fbf '#7FBBB3' --fbb '#7FBBB3' "

export PATH="$HOME/.local/bin:$HOME/.nimble/bin:$XDG_CONFIG_HOME/emacs/bin:$XDG_DATA_HOME/pnpm:$XDG_DATA_HOME/perl/bin:$PATH"
